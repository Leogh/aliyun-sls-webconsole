nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse
  div.container
    button.navbar-toggle.collapsed(type="button", data-target="#admin-navbar-collapse", data-toggle="collapse")
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
    
    div.navbar-header
      a.navbar-brand(href="/") Aliyun SLS WebConsole
        sup &reg;

    - var user = locals.user
    div#admin-navbar-collapse.collapse.navbar-collapse  
      if (user)
        ul.nav.navbar-nav
          li.dropdown
            a.dropdown-toggle(href="#", data-toggle="dropdown", role="button") Tools 
              span.caret
          ul.dropdown-menu
            li
              a(href="/aliyun-sls/") SLS Console

      ul.nav.navbar-nav.navbar-right
        if (user)
          li
            a #{ user.username }
          li
            a(href="/logout") Logout
            
        if (!user)
          li
            a(href="/login") Login
          li
            a(href="/register") Register  